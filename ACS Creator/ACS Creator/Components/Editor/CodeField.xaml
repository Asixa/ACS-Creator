<UserControl x:Class="ACS.Creator.Components.Editor.CodeField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACS.Creator.Components.Editor"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Drop="NewFile_Drop"
             >
    <Grid>
        <avalonedit:TextEditor Name="Editor"
                               Background="#FF1E1E1E" 
                               LineNumbersForeground="#FF007ACC"  
                               ShowLineNumbers="True" 
                               WordWrap="True" 
                               HorizontalScrollBarVisibility="Disabled" 
                               VerticalScrollBarVisibility="Auto"
                               Foreground="White"
                               SyntaxHighlighting="C#" KeyDown="Editor_KeyDown" KeyUp="Editor_KeyUp" PreviewMouseWheel="Editor_PreviewMouseWheel" FontFamily="Consolas"/>
    </Grid>
</UserControl>
